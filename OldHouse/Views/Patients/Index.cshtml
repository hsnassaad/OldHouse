@model IEnumerable<OldHouse.Data.Patient>

@{
    ViewData["Title"] = "Index";
}

<h2>Patients</h2>

<p>
    <a class="btn btn-primary" asp-action="Create"> <i class="fas fa-plus"> </i>  Add New Patient</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PatientId"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.PatientId"><i class="fas fa-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.PatientId"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
